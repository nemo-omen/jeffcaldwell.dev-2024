---
const { current } = Astro.props;
---

<header>
  <div class="header-inner constrained">
    <a href="/" class="masthead">Jeff <span class="accent">Caldwell</span></a>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/resume">Resume</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    background: transparent;
  }
  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    padding: 1rem 0;
  }

  .masthead {
    font-size: var(--step-1);
    font-family: var(--display);
    font-weight: 600;
    text-decoration: none;
    color: var(--foreground);
    letter-spacing: 0.125em;
  }

  nav ul {
    display: flex;
    gap: clamp(1rem, 5vw, 2rem);
    list-style: none;
    margin: 0;
    padding: 0;
    font-weight: 600;

    & li a {
      text-decoration: none;
      color: var(--foreground);
      font-family: var(--display);
      letter-spacing: 0.125em;
    }

    & li a:hover {
      color: var(--accent);
    }
  }
</style>
